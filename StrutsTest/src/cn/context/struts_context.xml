<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<package name="context" namespace="/context" extends="struts-default">

		<action name="ContextAction" class="cn.context.ContextAction" method="test">
		   		
			<result name="success" type="redirect">
				<param name="location">/pattern/success.jsp</param>
			</result>
			
			<result name="attr">
				<param name="location">/context/attr.jsp</param>
			</result>
		</action>
		
	</package>
</struts>